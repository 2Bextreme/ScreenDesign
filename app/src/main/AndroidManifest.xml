<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.screendesign">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScreenDesign"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity
            android:name=".activity.PasswordResettingActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MailAddressChangeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.PasswordChangeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.NotificationSettingActivity"
            android:exported="false"
            android:label="@string/title_activity_notification_setting" />
        <activity
            android:name=".activity.TopPageActivity"
            android:exported="true"
            android:label="@string/title_activity_top_page"
            android:theme="@style/Theme.ScreenDesign.NoActionBar"/>

        <activity
            android:name=".activity.ThisMonthShiftConfirmationScreenActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ConfirmationAlreadyShiftHandOverActivity"
            android:exported="false" />
        <activity
            android:name=".activity.DesireShiftHandOverActivity"
            android:exported="false" />
        <activity
            android:name=".activity.DesireShiftHandOverVerificationActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ConfigurationActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SalaryConfirmationScreenActivity"
            android:exported="false" />
    </application>

</manifest>