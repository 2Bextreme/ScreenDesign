<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/desireShiftHandOverTransitionBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:text="シフト希望提出"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/confirmationAlreadyShiftHandOverTransitionBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="提出済みシフト確認ボタン"
        app:layout_constraintEnd_toEndOf="@+id/desireShiftHandOverTransitionBtn"
        app:layout_constraintStart_toStartOf="@+id/desireShiftHandOverTransitionBtn"
        app:layout_constraintTop_toBottomOf="@+id/desireShiftHandOverTransitionBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>