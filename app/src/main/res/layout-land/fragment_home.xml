<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/desireShiftHandOverTransitionBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="シフト希望提出"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/confirmationAlreadyShiftHandOverTransitionBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="提出済みシフト確認ボタン"
        app:layout_constraintEnd_toEndOf="@+id/desireShiftHandOverTransitionBtn"
        app:layout_constraintStart_toStartOf="@+id/desireShiftHandOverTransitionBtn"
        app:layout_constraintTop_toBottomOf="@+id/desireShiftHandOverTransitionBtn" />

    <Button
        android:id="@+id/notiEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginBottom="32dp"
        android:text="通知終わり"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/notiStart"
        app:layout_constraintTop_toTopOf="@+id/notiStart"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/notiStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="通知開始"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/notiEnd"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmationAlreadyShiftHandOverTransitionBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>